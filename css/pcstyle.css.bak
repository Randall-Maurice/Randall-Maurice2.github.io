html {animation:change 5s ease-in-out infinite}
h1 {font-family:'Times New Roman';color: white; border-bottom:5px groove gold;border-right:5px groove gold;display:inline-block; margin: 0;}
h4{border-bottom:5px dotted gold;margin:0; width:100%; color:white;}
Body {margin: 0;padding: 0;background-color: #660066;background: linear-gradient(135deg,#660066,#0099CC); width:100%;}
p {text-align: justify;padding:15px;}
a {margin:0;}
audio {margin-left:auto;margin-right:auto; display:block;}

@keyframes change {
	0% {background-position: 0 50%;}
	50% {background-position: 100% 50%;}
	100% {background-position: 0 50%;}
}

